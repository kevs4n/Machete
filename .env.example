# Environment variables for MACHETE platform

# Core API Configuration
NODE_ENV=production
PORT=3001
API_SECRET=your-secret-key-here

# Database Configuration
POSTGRES_DB=machete
POSTGRES_USER=machete
POSTGRES_PASSWORD=machete_password
DATABASE_URL=postgresql://machete:machete_password@database:5432/machete

# Docker Configuration
DOCKER_SOCKET=/var/run/docker.sock
TOOLS_DIR=/app/tools
DATA_DIR=/app/data

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8080/api

# Caddy Configuration
CADDY_DOMAIN=localhost:8080
CADDY_EMAIL=admin@localhost

# Tool Registry Configuration
MAX_TOOLS=50
TOOL_TIMEOUT=300
REGISTRY_CACHE_TTL=3600

# Security Configuration
ENABLE_AUTH=false
JWT_SECRET=your-jwt-secret-here
SESSION_TIMEOUT=3600

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info
