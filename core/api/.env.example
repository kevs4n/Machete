# MACHETE Platform Configuration

# Application
APP_NAME=MACHETE Platform
VERSION=2.0.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Database
DATABASE_URL=postgresql+asyncpg://machete:machete@database:5432/machete

# Redis
REDIS_URL=redis://redis:6379/0

# Docker
DOCKER_SOCKET=/var/run/docker.sock
DOCKER_NETWORK=machete_machete-network

# File System
TOOLS_DIR=/app/tools
DATA_DIR=/app/data
LOGS_DIR=/app/logs

# Security
SECRET_KEY=your-secret-key-here-minimum-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Tool Configuration
TOOL_DEFAULT_PORT=8080
TOOL_DEFAULT_HEALTH_CHECK=/health
TOOL_BUILD_TIMEOUT=300
TOOL_START_TIMEOUT=60

# Git Configuration
GIT_CLONE_TIMEOUT=300
GIT_CLONE_DEPTH=1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
